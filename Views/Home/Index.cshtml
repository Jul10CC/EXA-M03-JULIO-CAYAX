<div class="page-header">
    <h1>Listado Cursos</h1>
</div>
<div class="row">
    <div class="col-md-6">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h2 class="panel-title">Cursos</h2>
            </div>
            <div class="panel-body">
                <ul class="list-unstyled" data-bind="foreach: cursos">
                    <li>
                        <strong><span data-bind="text: Nombre"></span></strong>
                        <span data-bind="text: CatedraticoNombre"></span>
                        <!-Este vincula el controlador de clicks para el elemento a (enlace) a la funcion getLibroDetalle -->
                        <small><a href="#" data-bind="click: $parent.getCursoDetalle">Detalles</a></small>
                    </li>
                </ul>
            </div>
        </div>
        <div class="alert alert-danger" data-bind="visible: error">
            <p data-bind="text: error"></p>
        </div>
    </div>


    <!-- ko if:detalle() -->
    <div class="col-md-6">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h2 class="panel-title">Detalle del Curso</h2>
            </div>
            <div class="panel-body">
                <table class="table">
                    <tr>
                        <td>Catedratico</td>
                        <td data-bind="text: detalle().CatedraticoNombre"></td>
                    </tr>
                    <tr>
                        <td>Nombre</td>
                        <td data-bind="text: detalle().Nombre"></td>
                    </tr>
                    <tr>
                        <td>Categoria</td>
                        <td data-bind="text: detalle().Categoria"></td>
                    </tr>
                    <tr>
                        <td>Descripcion</td>
                        <td data-bind="text: detalle().Descripcion"></td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
    <!-- /ko -->
</div>

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h2 class="panel-title">Agregar un nuevo curso </h2>
            </div>
            <div class="panel-body">
                <form class="form-horizontal" data-bind="submit: agregarCurso">
                    <div class="form-group">
                        <label form="inputCatedratico" class="col-sm-2 control-label"> Catedratico: </label>
                        <div class="col-sm-10">
                            <!--Los valores de la lista desplegable del autor estan vinculador a los datos self.autores-->
                            <select data-bind="options: catedraticos, optionsText: 'Nombre', value: nuevoCurso.Catedratico">
                            </select>
                        </div>
                    </div>
                    <div class="form-group" data-bind="with: nuevoCurso">
                        <label for="inputNombre" class="col-md-2 control-label">Nombre:</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="inputNombre" data-bind="value: Nombre">
                        </div>
                        <label for="inputCategoria" class="col-md-2 control-label">Categoria: </label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="inputCategoria" data-bind="value: Categoria">
                        </div>
                        <label for="inputDescripcion" class="col-md-2 control-label">Descripcion</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="inputDescripcion" data-bind="value: Descripcion">
                        </div>
                    </div>
                    <button type="submit" class="btn btn-default">Enviar</button>
                </form>
            </div>
        </div>
    </div>
</div>
